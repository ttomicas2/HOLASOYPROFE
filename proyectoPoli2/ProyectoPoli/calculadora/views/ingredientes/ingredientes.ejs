<!DOCTYPE html>
<html>
    <head>
        <title>magic Party</title>
        <meta charset="utf-8">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
        <link
        href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <span class="navbar__logo">
                <a href="/ingredientes" class="navbar-brand" href="http://localhost:3000/">Magic Party</a>
            </span>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a href="/ingredientes" class="nav-link" href="http://localhost:3000/">Ingredientes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/productos">Productos</a>
                </li>
            </ul>
        </nav>
        <div class="container mt-4">
            <div class="row">
                <div class="">
                    <form class="d-flex" action="/ingredientes/buscar" method="GET">
                        <div class="input-group">
                            <input type="text" class="form-control" name="buscador" placeholder="Buscar ingrediente">
                            <button type="submit" class="btn btn-primary" >
                                <i class="ri-search-line"></i>
                            </button>
                        </div>
                    </form>
                    <a href="/ingresar" class="btn btn-primary w-100 mt-xl-4"> ingresar nuevo ingrediente</a>
                </div>
            </div>
            <div class="row mt-4">
                <div style="max-height: 400px; overflow-y: scroll;">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="text-end">id</th>
                                <th>Ingrediente</th>
                                <th class="text-end">Costo</th>
                                <th class="text-end">Unidad</th>
                                <th class="text-end">Cantidad</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% result.forEach(function(rowData) { %>
                                <tr>
                                    <td class="text-end"><%= rowData.id %></td>
                                    <td><%= rowData.nombre %></td>
                                    <td class="text-end">$<%= rowData.costo %></td>
                                    <td class="text-end"><%= rowData.unidad %></td>
                                    <td class="text-end"><%= rowData.cantidad %></td>
                                    <td class="text-center">
                                        <a class="btn btn-danger" href="/eliminar/<%= rowData.id %>">
                                            <i class="ri-chat-delete-line"></i>
                                        </a>
                                        <a class="btn btn-primary" href="/editarInterfaz/<%= rowData.id %>">
                                            <i class="ri-edit-2-line"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
