<html>
    <head>
        <title>magic Party</title>
        <meta charset="utf-8">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
        <link
        href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <span class="navbar__logo">
                <a href="/ingredientes" class="navbar-brand" href="http://localhost:3000/">Magic Party</a>
            </span>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a href="/ingredientes" class="nav-link" href="http://localhost:3000/">Ingredientes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/productos">Productos</a>
                </li>
            </ul>
        </nav>
        <div class="container mt-4 w-100">
            <div class="row">
                <div class="">
                    <form class="d-flex" action="/productos/buscar/:" method="post">
                        <div class="input-group">
                            <input type="text" class="form-control" name="buscador" placeholder="Buscar Producto">
                            <button type="submit" class="btn btn-primary" >
                                <i class="ri-search-line"></i>
                            </button>
                        </div>
                    </form>
                    <a href="/ingresarProducto" class="btn btn-primary w-100 mt-3"> ingresar nuevo Producto</a>
                </div>
            </div>
            <div class="row mt-4 h-75">
                <div class="">
                    <div class="h-75 overflow-y-scroll">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th class="text-end">Costo Receta</th>
                                    <th class="text-end">Cantidad por Receta</th>
                                    <th class="text-end">Costo por Unidad</th>
                                    <th class="text-end">Packaging</th>
                                    <th class="text-end">Agregado %</th>
                                    <th class="text-end">Margen %</th>
                                    <th class="text-end">Costo</th>
                                    <th class="text-end">Ingredientes</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% result.forEach(function(rowData) { %>
                                    <tr>
                                        <td><%= rowData.nombre %></td>
                                        <td class="text-end">$<%= rowData.calcularCostoIngredientes().toFixed(2) %></td>
                                        <td class="text-end"><%= rowData.cantidadReceta %></td>
                                        <td class="text-end">$<%= rowData.calcularCostoUnidad().toFixed(2) %></td>
                                        <td class="text-end">$<%= rowData.packaging %></td>
                                        <td class="text-end"><%= rowData.agregado %></td>
                                        <td class="text-end"><%= rowData.margen %></td>
                                        <td class="text-end">$<%= rowData.costo.toFixed(2) %></td>
                                        <td class="text-end">
                                          <a class="btn btn-primary" href="/productos/<%=rowData.id%>">ingredientes</a>
                                        </td>
                                        <td class="text-center d-flex gap-3">
                                            <a class="btn btn-danger" href="/eliminarProducto/<%=rowData.id%>">
                                                <i class="ri-chat-delete-line"></i>
                                            </a>
                                            <a class="btn btn-primary" href="/editarProductoInterfaz/<%=rowData.id%>">
                                                <i class="ri-edit-2-line"></i>
                                            </a>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
